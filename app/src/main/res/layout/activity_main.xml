<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.unibe.teleinfoapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIM Serial Number:"
        android:id="@+id/lba1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lba2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lba1"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:editable="false"
        android:textStyle="bold"
        android:elegantTextHeight="false"
        android:text="..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIM Operador:"
        android:id="@+id/lbb1"
        android:layout_below="@+id/lba1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbb2"
        android:editable="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/lbb1"
        android:layout_alignLeft="@+id/lba2"
        android:layout_alignStart="@+id/lba2"
        android:layout_alignRight="@+id/lba2"
        android:layout_alignEnd="@+id/lba2"
        android:text="..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIM IMSI:"
        android:id="@+id/lbc1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lbb1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MCC:"
        android:id="@+id/lbd1"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/lbc1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbd2"
        android:editable="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/lbd1"
        android:layout_alignLeft="@+id/lbb2"
        android:layout_alignStart="@+id/lbb2"
        android:text="..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MNC:"
        android:id="@+id/lbe1"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/lbd1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbe2"
        android:editable="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/lbe1"
        android:layout_alignLeft="@+id/lbd2"
        android:layout_alignStart="@+id/lbd2"
        android:text="..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Operator:"
        android:id="@+id/lbf1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbf2"
        android:editable="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/lbf1"
        android:layout_alignLeft="@+id/lbe2"
        android:layout_alignStart="@+id/lbe2"
        android:text="..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Type:"
        android:id="@+id/lbg12"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/lbf1"
        android:layout_alignParentLeft="true"
