    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbg2"
        android:editable="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/lbg12"
        android:layout_alignLeft="@+id/lbf2"
        android:layout_alignStart="@+id/lbf2"
        android:text="..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSISDN:"
        android:id="@+id/lbh1"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/lbg12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbh2"
        android:editable="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/lbh1"
        android:layout_alignLeft="@+id/lbg2"
        android:layout_alignStart="@+id/lbg2"
