        android:text="..."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/errormsg"
        android:textColor="#f50404"
        android:layout_below="@+id/lbh1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbc2"
        android:editable="false"
        android:textStyle="bold"
        android:text="..."
        android:layout_alignTop="@+id/lbc1"
        android:layout_alignLeft="@+id/lbd2"
        android:layout_alignStart="@+id/lbd2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Type:"
        android:id="@+id/textView"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:editable="false"
        android:textStyle="bold"
        android:layout_below="@+id/lbg12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbi2"
        android:editable="false"
        android:textStyle="bold"
        android:layout_alignRight="@+id/lbh2"
        android:layout_alignEnd="@+id/lbh2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/lbh2"
        android:layout_alignStart="@+id/lbh2"
        android:text="..." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar seÃ±al"
        android:id="@+id/btnChart"
        android:layout_above="@+id/btnMap"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicar torre"
        android:id="@+id/btnMap"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnChart"
        android:layout_alignStart="@+id/btnChart"
        android:layout_alignRight="@+id/btnChart"
        android:layout_alignEnd="@+id/btnChart" />

</RelativeLayout>
